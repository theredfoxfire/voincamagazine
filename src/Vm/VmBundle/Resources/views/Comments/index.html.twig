{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Comments list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref_comments_id</th>
                <th>Comments</th>
                <th>Token</th>
                <th>Is_activated</th>
                <th>Is_reply</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vm-comments_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.refcommentsid }}</td>
                <td>{{ entity.comments }}</td>
                <td>{{ entity.token }}</td>
                <td>{{ entity.isactivated }}</td>
                <td>{{ entity.isreply }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('vm-comments_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('vm-comments_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vm-comments_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
